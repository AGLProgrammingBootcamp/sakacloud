<%= form_for(@review) do |f| %>
  <% if @review.errors.any? %>
    <div id="error_explanation" class="alert alert-danger">
      <h2><%= @review.errors.count %>件のエラーがあります。</h2>
      <ul>
        <% @review.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field">
    <%= f.label "日本酒名" %><br>
    <%= f.collection_select :sake_id, Sake.all, :id, :name, {prompt: true}, {class: "form-control sake-id-field"} %>
  </div>
  <div class="field">
    <%= f.label "ユーザ名" %><br>
    <%= f.collection_select :user_id, User.all, :id, :name, {prompt: true}, {class: "form-control user-id-field"} %>
  </div>
  <div class="field">
    <%= f.label "香り" %><br>
    <%= f.select :fruity, options_for_select([-2, -1, 0, 1, 2]), {class: "form-control user-id-field"} %>
  </div>
  <div class="field">
    <%= f.label "味" %><br>
    <%= f.select :taste, options_for_select([-2, -1, 0, 1, 2]), {class: "form-control user-id-field"} %>
  </div>
  <div class="field">
    <%= f.label "コメント" %><br>
    <%= f.text_area :comment %>
  </div>
  <div class="actions">
    <%= f.submit "保存", { class: "btn primary-btn" } %>
  </div>
<% end %>
